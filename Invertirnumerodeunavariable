// Invertirnumerodevariable.cpp : Defines the entry point for the console application.
//Ejer.N°2
// Dado un número entero N, hacer un programa para invertir el número en otra variable Z.  Ej. Si N= 456721, el número invertido es Z=127654.

#include "stdafx.h"
#include "conio.h"
#include <iostream>
 
using namespace std;

void main()
{int N,Z=0,r,c;

 do
{cout <<"Ingrese un numero con mas de 3 digitos: " << endl;

 cin >>N;

}while(N<100);

while(N>0)
{r=N%10;
 Z=Z*10+r;
 c=N/10;
 N=c;
}

cout <<"El numero invertido es:" <<endl << Z;

_getch();

}
